{
  "extends": "@susisu",
  "env": {
    "es6": true,
    "commonjs": true
  },
  "rules": {
    "no-invalid-this": "off"
  },
  "overrides": [
    {
      "files": ["test.js", "test/**/*.js"],
      "env": {
        "mocha": true
      },
      "globals": {
         "$core": "readonly",
         "$aux": "readonly",
         "$helper": "readonly"
      },
      "rules": {
        "no-invalid-this": "warn",
        "no-new": "off",
        "no-unused-expressions": "off"
      }
    }
  ]
}
