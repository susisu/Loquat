{
  "extends": "@susisu",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "max-len": ["error", 100, { "ignoreComments": true }]
  },
  "overrides": [
    {
      "files": ["test.js", "test/**/*.js"],
      "env": {
        "mocha": true
      },
      "globals": {
         "_utils": "readonly",
         "_pos": "readonly",
         "_error": "readonly",
         "_stream": "readonly",
         "_parser": "readonly"
      },
      "rules": {
        "max-len": "off",
        "no-new": "off",
        "no-unused-expressions": "off"
      }
    }
  ]
}
