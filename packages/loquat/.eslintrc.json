{
  "extends": "@susisu",
  "env": {
    "es6": true,
    "commonjs": true
  },
  "overrides": [
    {
      "files": ["test.js"],
      "env": {
        "mocha": true
      },
      "rules": {
        "no-new": "off",
        "no-unused-expressions": "off"
      }
    },
    {
      "files": ["examples/**/*.js"],
      "env": {
        "node": true
      },
      "rules": {
        "no-console": "off",
        "no-use-before-define": "off"
      }
    }
  ]
}
